<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="false">

        <View
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/ll_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/White"
                android:text="@string/coal_type"
                android:padding="@dimen/margin_15"
                android:drawableEnd="@mipmap/icon_main_gray_next"
                android:id="@+id/tv_cocal"
                android:drawableStart="@mipmap/icon_main_release_goods_cocal"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/MaterialGrey800"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/White"
                android:text="@string/metals"
                android:padding="@dimen/margin_15"
                android:drawableStart="@mipmap/icon_main_release_goods_metals"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_10"
                android:drawableEnd="@mipmap/icon_main_gray_next"
                android:id="@+id/tv_metals"
                android:textColor="@color/MaterialGrey800"
                android:textSize="14sp" />

        </LinearLayout>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <include layout="@layout/action_bar_custom" />
</FrameLayout>