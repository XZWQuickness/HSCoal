<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:id="@+id/llLay"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:maxLines="1"
            android:textColor="@color/MaterialGrey800"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:id="@+id/purchaseQuantity"
            android:textColor="@color/Red"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toStartOf="@id/llLay"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"

        android:layout_toEndOf="@id/img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coalVarietyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/MaterialGrey800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:textColor="@color/MaterialGrey600"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/provinceCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/ship_to"
            android:maxLines="1"
            android:textColor="@color/MaterialGrey400"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/plannedDeliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/take_goods_date"
            android:maxLines="1"
            android:textColor="@color/MaterialGrey400"
            android:textSize="14sp" />


    </LinearLayout>

</RelativeLayout>