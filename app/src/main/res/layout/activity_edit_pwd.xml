<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/action_bar_custom" />

    <com.szw.framelibrary.view.ClearWriteEditText
        android:id="@+id/ed_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/White"
        android:padding="@dimen/margin_15"
        android:hint="请输入旧密码"
        android:maxLines="1"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColorHint="@color/MaterialGrey400"
        android:textColor="@color/MaterialGrey600"
        android:textSize="@dimen/sp_14" />
    <com.szw.framelibrary.view.ClearWriteEditText
        android:id="@+id/ed_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/White"
        android:inputType="textPassword"
        android:padding="@dimen/margin_15"
        android:maxLines="1"
        android:hint="请输入新密码"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColorHint="@color/MaterialGrey400"
        android:textColor="@color/MaterialGrey600"
        android:textSize="@dimen/sp_14" />
        android:textSize="@dimen/sp_14" />
    <com.szw.framelibrary.view.ClearWriteEditText
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/White"
        android:padding="@dimen/margin_15"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="请确认登录密码"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColorHint="@color/MaterialGrey400"
        android:textColor="@color/MaterialGrey600"
        android:textSize="@dimen/sp_14" />


    <com.flyco.roundview.RoundTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:id="@+id/bt_submit"
        android:layout_marginTop="60dp"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_15"
        android:textColor="@color/White"
        app:rv_backgroundColor="@color/colorPrimary"
        app:rv_cornerRadius="@dimen/margin_20"
        android:padding="@dimen/margin_15"
        android:gravity="center"
        />


</LinearLayout>